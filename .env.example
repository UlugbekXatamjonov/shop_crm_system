# ============================================================
# .ENV NAMUNA FAYL
# ============================================================
# Bu faylni nusxalab, ".env" nomli fayl yarating:
#   cp .env.example .env
#
# Keyin .env faylini o'zingizning ma'lumotlaringiz bilan to'ldiring.
# MUHIM: .env fayli hech qachon git ga push qilinmasin!
# ============================================================


# ============================================================
# DJANGO ASOSIY SOZLAMALAR
# ============================================================

# Maxfiy kalit — production da murakkab kalit ishlating
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-very-secret-key-here-change-this

# Debug rejimi — production da False bo'lishi SHART
DEBUG=True

# Ruxsat etilgan hostlar (vergul bilan ajrating)
# Misol: crm.example.com,www.crm.example.com
ALLOWED_HOSTS=localhost,127.0.0.1


# ============================================================
# POSTGRESQL MA'LUMOTLAR BAZASI
# ============================================================

DB_NAME=crm_db
DB_USER=postgres
DB_PASSWORD=your_database_password
DB_HOST=localhost
# Docker da: DB_HOST=db
DB_PORT=5432


# ============================================================
# REDIS
# ============================================================

# Local: redis://localhost:6379/0
# Docker: redis://redis:6379/0
REDIS_URL=redis://localhost:6379/0


# ============================================================
# EMAIL (Gmail SMTP misoli)
# ============================================================

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your_email@gmail.com
# Gmail "App Password" (2FA yoqilganda)
EMAIL_HOST_PASSWORD=your_app_password


# ============================================================
# CORS (Frontend domenlari)
# ============================================================

# Vergul bilan ajrating
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8080


# ============================================================
# SENTRY (Ixtiyoriy — xatolarni kuzatish)
# ============================================================

# sentry.io dan DSN olasiz
SENTRY_DSN=
